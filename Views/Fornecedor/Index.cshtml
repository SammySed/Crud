@model IEnumerable<Prod_.Models.Fornecedor>	

@{
	ViewBag.Title = "Index";
}

<div class ="container-fluid">

	<h1 class= "h3 mb-2 text-gray-800">Fornecedor</h1>
	<p  class= "mb-4">Listagem de Fornecedor.</p>
	
	<p>
		<a class="btn btn-primary btn-icon-split btn-sm" href="~/Fornecedor/Create">
			<span class="icon text-white">
					<i class="fas fa-plus-circle"></i>
			</span>
			<span class="text text-white">Adicionar</span>
		</a>
		
		<div class="card shadow mb-4">
			<div class="card-header py-3">
				<h6 class="m-0 font-weight-bold text-primary">Fornecedor</h6>
			</div>
			
			<div class="card-body">
				<div class="table-responsive">
					<table class= "table table-bordered table-hover" id="sisDataTable" width="100%" cellspacing="0">
							<thead>
								 <tr>
									<th scope="col">@Html.DisplayNameFor(model => model.Nome)</th>
									<th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
									<th scope="col">@Html.DisplayNameFor(model => model.Nivel)</th>	
									<th scope="col">@Html.DisplayNameFor(model => model.Produto_.Nome)</th>																				
								</tr>
							</thead>

							    <tbody>
								@{
									foreach (var item in Model)
									{
									
										<tr> 
											<td>
												@Html.DisplayFor(modelItem => item.Nome)
											</td>
											
											<td>
												@Html.DisplayFor(modelItem => item.Email)
											</td>											
											<td>
												@Html.DisplayFor(modelItem => item.Nivel)
											</td>	
											<td>
												@Html.DisplayFor(modelItem => item.Produto_.Nome)
											</td>												
											
											<td>
											    <a class="btn btn-primary btn-icon-split btn-sm" asp-action ="Edit"
												   asp-route-id="@item.FornecedorId">
												   
												   <span class ="icon text-white-50">
														<i class="fa fa-pencil"></i></span>
													<span class="text">Editar</span>
													
												</a>
												<a class="btn btn-secondary btn-icon-split btn-sm" asp-action ="Details"
												   asp-route-id="@item.FornecedorId">
												   
												   <span class ="icon text-white-50">
														<i class="fa fa-list"></i></span>
													<span class="text">Detalhes</span>
													
												</a>
												<a class="btn btn-danger btn-icon-split btn-sm" asp-action ="Delete"
												   asp-route-id="@item.FornecedorId">
												   
												   <span class ="icon text-white-50">
														<i class="fa fa-trash"></i></span>
													<span class="text">Deletar</span>
													
												</a>
											</td>
										</tr>
									}
								}
							
						</tbody>
					</table>
				</div>
			</div>
		</div>
	 </p>
</div>