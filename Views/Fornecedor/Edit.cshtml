@model Prod_.Models.Fornecedor


@{
    ViewData["Title"] = "Fornecedor";
}

<h1>Editar Fornecedor</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />

            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />

            </div>

            @*<div class="form-group">
                <label asp-for="Nivel" class="control-label"></label>
                <input asp-for="Nivel" class="form-control" />
                <span asp-validation-for="Nivel" class="text-danger"></span>
                </div> *@

            @Html.LabelFor(model => model.Nivel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="form-group">
                @Html.DropDownListFor(m => m.Nivel , new List<SelectListItem> {
                new SelectListItem { Text ="Admin" , Value="Administrador" },
                new SelectListItem { Text ="User" , Value="Operador" }} ,"-- Selecionar Nivel --", new { @class = "form-control" })
                @*Html.ValidationMessageFor(model => model.Nivel, "", new { @class = "text-danger" })*@

                <input type="hidden" id="hidden1" name="hidden1" value="" />
            </div>

            <div class="form-group">
                <label asp-for="Produto_.Nome" class="control-label"></label>
                <input asp-for="Produto_.Nome" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Produto_.Descricao" class="control-label"></label>
                <input asp-for="Produto_.Descricao" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Produto_.Modelo" class="control-label"></label>
                <input asp-for="Produto_.Modelo" class="form-control" />

            </div>

            <div class="form-group" style="margin-top:15px;">
                @*<a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@Model.FornecedorId">Editar</a>*@
                <input type="submit" value="Editar" class="btn btn-primary btn-sm" />
                <a class="btn btn-secondary text-white btn-sm" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>