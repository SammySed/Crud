@model Prod_.Models.Fornecedor

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>
<h3>Voce tem certeza que quer apagar isso?</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" readonly />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" readonly/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div> 
            
            <div class="form-group">
                <label asp-for="Nivel" class="control-label"></label>
                <input asp-for="Nivel" class="form-control" readonly/>
                <span asp-validation-for="Nivel" class="text-danger"></span>
            </div>         

            <div class="form-group">
                <label asp-for="Produto_.Nome" title="Nome Produto" class="control-label"></label>
                <input asp-for="Produto_.Nome" class="form-control" readonly/>
                <span asp-validation-for="Produto_.Nome" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="Produto_.Descricao" title="Nome Produto" class="control-label"></label>
                <input asp-for="Produto_.Descricao" class="form-control" readonly/>
                <span asp-validation-for="Produto_.Descricao" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="Produto_.Modelo" title="Nome Produto" class="control-label"></label>
                <input asp-for="Produto_.Modelo" class="form-control" readonly/>
                <span asp-validation-for="Produto_.Modelo" class="text-danger"></span>
            </div> 
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="FornecedorId" />
            <input type="submit" value="Apagar" class="btn btn-danger btn-sm" /> |
            <a class="btn btn-secondary text-white btn-sm" asp-action="Index">Voltar</a>
        </form>
    </div>
</div>